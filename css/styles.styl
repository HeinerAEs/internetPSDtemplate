@import url("http://fonts.googleapis.com/css?family=Oswald")
@import url("http://fonts.googleapis.com/css?family=Calligraffitti")

@import "nib"
@import "normalize.styl"
@import "font.styl" 

.btn
	border none
	border-radius 5px
	box-shadow 0px 0px 2px rgba(255, 255, 255, 0.5)
	color #FFF
	padding 0.5em 0.7em
	text-align center
	text-transform uppercase
	width 100px
	&-active
		color #FFF !important
		background linear-gradient(to bottom, #F72C32, #F95155) !important
	&-blue
		background #027FFF
		background linear-gradient(to bottom, #027FFF, #4FA7FF)
		&:hover
			background #4FA7FF
			background linear-gradient(to bottom, #4FA7FF, #027FFF)
	&-form
		margin-left -2.3em
		width 33px
	&-orange
		background #FC7903
		background linear-gradient(to bottom, #FC7903, #FD9639)
		&:hover
			background #FD9639
			background linear-gradient(to bottom, #FD9639, #FC7903)
	&-red
		background #F72C32
		background linear-gradient(to bottom, #F72C32, #F95155)
		&:hover
			background #F95155
			background linear-gradient(to bottom, #F95155, #F72C32)
			
.block
	clear both
	display-block
.col-6
	width width / 2
.col-12
	width width
.inline
	display inline-block
.left
	text-align left
	
.Header
	background #ff9a07
	background linear-gradient(to bottom, #DF8600 0%, #FCE22E 100%)
	height 90vh
	padding 1em
	&-bottom
	&-slide
	&-top
		min-height 3.5em
		margin 0 auto
		position relative
		width 80 vw
		
	&-bottom
		margin-top 2em
	&-bottomBrand
		color #FFF
		display inline-block
		width 30%
	&-bottomBrandTitle 
		font-family 'Calligraffitti', cursive			
		position relative
		span
			color #222
			font-family 'Oswald', sans-serif
			display block
			font-size 1rem
			left 10%
			position absolute
			top 70%
	&-bottomMenu
		display inline-block
		overflow hidden
		position: absolute;
		top: 25%;	
		width 68%
	&-bottomMenuItem
		display inline-block
		list-style none
		margin 0
	&-bottomMenuLink
		background linear-gradient(to bottom, rgba(223, 134, 0, 0.5) 0%, rgba(252, 230, 0, 0.5) 100%)
		color #222
		display block
		font-size 1.5em
		padding 0.5em 1em
		text-decoration none
		&:hover
			background linear-gradient(to bottom, #F72C32, #F95155)
			color #FFF
	&-bottomMenuList
		margin 0
	
	&-slide
		color #111
		text-align center
	&-slideTitle
	&-slideChange
		margin 0 auto
		padding 0.5em
		width 80%
	&-slideTitle
		font-size 2.6rem
		font-weight 300
		text-transform uppercase
	&-slideChange
		span
			background #FFF
			border-radius 50%
			display inline-block
			height 20px
			width 20px
		.slideActive
			background #000
	
	&-topButton
	&-topSearch
	&-topFollow
		overflow hidden
		position absolute
	&-topButton
		left 0
	&-topSearch
		right 0
	&-topSearchForm
		.inputText
			border none
			border-radius 5px
			padding 0.55em 0.7em
			width 300px
	&-topFollow
		color #FFF
		font-size 1.5em
		right 1%
		top 90%
		text-transform lowercase


.right
	text-align right
.title-lg-x6
	font-size 5em
	margin 0
	padding 0 0.3em