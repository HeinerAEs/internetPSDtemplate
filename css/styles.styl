@import url("http://fonts.googleapis.com/css?family=Oswald")
@import url("http://fonts.googleapis.com/css?family=Calligraffitti")

@import "nib"
@import "normalize.styl"
@import "font.styl" 

.btn
.list
	border none
	border-radius 5px
	box-shadow 0px 0px 2px rgba(255, 255, 255, 0.5)
	color #FFF
	padding 0.5em 0.7em
	text-align center
	text-transform uppercase
	width 100px
	&-active
		color #FFF !important
		background linear-gradient(to bottom, #F72C32, #F95155) !important
	&-blue
		background #027FFF
		background linear-gradient(to bottom, #027FFF, #4FA7FF)
		&:hover
			background #4FA7FF
			background linear-gradient(to bottom, #4FA7FF, #027FFF)
	&-icon
		margin-left -2.7em
		text-align center
		width 40px
	&-light
		color #000
		background #E9E9E9
		background linear-gradient(to bottom, #E9E9E9, #F0F0F0)
		&:hover
			background #D3D3D3
			background linear-gradient(to bottom, #D3D3D3, #E6E6E6)
	&-orange
		background #FC7903
		background linear-gradient(to bottom, #FC7903, #FD9639)
		&:hover
			background #FD9639
			background linear-gradient(to bottom, #FD9639, #FC7903)
	&-red
		background #F72C32
		background linear-gradient(to bottom, #F72C32, #F95155)
		&:hover
			background #F95155
			background linear-gradient(to bottom, #F95155, #F72C32)
			
.block
	clear both
	display block
.center
	margin 0 auto
.col-6
	display inline-block
	width (width / 2) - 0.5%
.col-12
	width width
	
.Header
	background #ff9a07
	background linear-gradient(to bottom, #DF8600 0%, #FCE22E 100%)
	height 90vh
	padding 1em
	&-bottom
	&-slide
	&-top
		min-height 3.5em
		margin 0 auto
		position relative
		width 80 vw
		
	&-bottom
		margin-top 2em
	&-bottomBrand
		color #FFF
		display inline-block
		width 30%
	&-bottomBrandTitle 
		font-family 'Calligraffitti', cursive			
		position relative
		span
			color #222
			font-family 'Oswald', sans-serif
			display block
			font-size 1rem
			left 10%
			position absolute
			top 70%
	&-bottomMenu
		display inline-block
		overflow hidden
		position: absolute;
		top: 25%;	
		width 68%
	&-bottomMenuItem
		display inline-block
		list-style none
		margin 0
	&-bottomMenuLink
		background linear-gradient(to bottom, rgba(223, 134, 0, 0.5) 0%, rgba(252, 230, 0, 0.5) 100%)
		color #222
		display block
		font-size 1.5em
		padding 0.5em 1em
		text-decoration none
		&:hover
			background linear-gradient(to bottom, #F72C32, #F95155)
			color #FFF
	&-bottomMenuList
		margin 0
	
	&-slide
		color #111
		text-align center
	&-slideTitle
	&-slideChange
		margin 0 auto
		padding 0.5em
		width 80%
	&-slideTitle
		font-size 2.6rem
		font-weight 300
		text-transform uppercase
	&-slideChange
		span
			background #FFF
			border-radius 50%
			display inline-block
			height 20px
			width 20px
		.slideActive
			background #000
	
	&-topButton
	&-topSearch
	&-topFollow
		overflow hidden
		position absolute
	&-topButton
		left 0
	&-topSearch
		right 0
	&-topSearchForm
		.inputText
			border none
			border-radius 5px
			padding 0.55em 0.7em
			width 300px
	&-topFollow
		color #FFF
		font-size 1.5em
		right 1%
		top 90%
		text-transform lowercase


.inline
	display inline-block
.left
	text-align left
.list
	border 1px solid #E6E6E6
	text-align left
	width 80%
	&-light
		color #000
		background #FFFFFF
		background linear-gradient(to bottom, #FFFFFF, #F2F2F2)
		&:hover
			border 1px solid #E6E6E6
			background #F2F2F2
			background linear-gradient(to bottom, #F2F2F2, #FFFFFF)
	

.Services
.Work
	display flex
	margin 0 auto
	position relative
	width 80vw
.Services
	top -5em
	&-aside
		width 30%
	&-article
		width 69%
	&-item
		list-style none
		margin 0 0 0.1em 0
	&-link
		color: #222
		display block
	&-link:before
		color: #222
		content "\e604"
		font-size 1.5em
	&-list
		padding 0

.title	
	display block
	margin 0
	padding 0
	&-1x
		font-size 0.5em
		font-weight 500
		span
			color #A7A7A7
			display block
			font-size 0.8em
	&-2x
		font-size 1em
		font-weight 500
		span
			color #A7A7A7
			display block
			font-size 0.8em
	&-3x
		font-size 2em
		font-weight 500
		span
			color #A7A7A7
			display block
			font-size 0.8em
	&-4x
		font-size 3em
		font-weight 500
		span
			color #A7A7A7
			display block
			font-size 0.8em
	&-5x
		font-size 4em
		font-weight 500
		span
			color #A7A7A7
			display block
			font-size 0.8em
	&-6x
		font-size 5em
		margin 0
		padding 0 0.3em
		span
			display block
			font-weight 700
			font-size 0.2em
.text-right
	text-align right
.u-uppercase
	text-transform uppercase

.Work
	top -8em
	p
		color #B0B0B0
		font-family sans-serif
		text-align center
	&-item
		margin-right 1.2em
		&:last-child
			margin-right 0
	&-itemFigure
		background #FFF
		border-radius 50%
		margin 0 auto
		min-height 290px
		padding 1em
		text-align center
	&-itemImage
		min-height 164px
		width 170px