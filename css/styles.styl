@import url("http://fonts.googleapis.com/css?family=Oswald")

@import "nib"
@import "normalize.styl"

.btn
	border none
	border-radius 5px
	box-shadow 0px 0px 2px rgba(255, 255, 255, 0.5)
	color #FFF
	padding 0.5em 0.7em
	text-align center
	text-transform uppercase
	width 100px
	&-blue
		background #027FFF
		background linear-gradient(to bottom, #027FFF, #4FA7FF)
		&:hover
			background #4FA7FF
			background linear-gradient(to bottom, #4FA7FF, #027FFF)
	&-form
		margin-left -2.3em
		width 33px
	&-orange
		background #FC7903
		background linear-gradient(to bottom, #FC7903, #FD9639)
		&:hover
			background #FD9639
			background linear-gradient(to bottom, #FD9639, #FC7903)
	&-red
		background #F72C32
		background linear-gradient(to bottom, #F72C32, #F95155)
		&:hover
			background #F95155
			background linear-gradient(to bottom, #F95155, #F72C32)
			
.block
	clear both
	display-block
.col-6
	width width / 2
.col-12
	width width
.inline
	display inline-block
	

.Header
	background #ff9a07
	background linear-gradient(to bottom, #DF8600 0%, #FCE22E 100%)
	height 90vh
	padding 1em
	&-top
		min-height 3.5em
		margin 0 auto
		position relative
		width 80 vw
	&-topButton
	&-topSearch
	&-topFollow
		overflow hidden
		position absolute
	&-topButton
		left 0
	&-topSearch
		right 0
	&-topSearchForm
		.inputText
			border none
			border-radius 5px
			padding 0.55em 0.7em
			width 300px
	&-topFollow
		color #FFF
		font-size 1.5em
		right 1%
		top 90%
		text-transform lowercase
.right
	text-align right