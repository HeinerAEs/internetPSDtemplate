@import url("http://fonts.googleapis.com/css?family=Oswald")
@import url("http://fonts.googleapis.com/css?family=Calligraffitti")

@import "nib"
@import "normalize.styl"
@import "font.styl" 

.btn
.list
	border none
	border-radius 5px
	box-shadow 0px 0px 2px rgba(255, 255, 255, 0.5)
	color #FFF
	padding 0.5em 0.7em
	text-align center
	text-transform uppercase
	width 100px
	&-active
		color #FFF !important
		background linear-gradient(to bottom, #F72C32, #F95155) !important
	&-blue
		background #027FFF
		background linear-gradient(to bottom, #027FFF, #4FA7FF)
		&:hover
			background #4FA7FF
			background linear-gradient(to bottom, #4FA7FF, #027FFF)
	&-icon
		margin-left -2.7em
		text-align center
		width 40px
	&-light
		color #000
		background #E9E9E9
		background linear-gradient(to bottom, #E9E9E9, #F0F0F0)
		&:hover
			background #D3D3D3
			background linear-gradient(to bottom, #D3D3D3, #E6E6E6)
	&-orange
		background #FC7903
		background linear-gradient(to bottom, #FC7903, #FD9639)
		&:hover
			background #FD9639
			background linear-gradient(to bottom, #FD9639, #FC7903)
	&-red
		background #F72C32
		background linear-gradient(to bottom, #F72C32, #F95155)
		&:hover
			background #F95155
			background linear-gradient(to bottom, #F95155, #F72C32)

.Footer
.Services
.Work
	display flex
	margin 0 auto
	position relative
	width 80vw
.Footer
	align-items stretch
	background #0C0B09
	color #FFF
	display flex
	flex-wrap wrap
	font-weight 100
	justify-content center
	padding 1em
	width 100%
	&-bottom
		display flex
		flex-wrap wrap
		font-size 0.8em
		justify-content space-between
		position relative
		width 80vw
	&-bottomList
		margin 0 auto
	&-bottomItem
		display inline-block
		list-style none
		padding 0
		a
			color #FFF
			display block
			border-radius 50%
			font-size 1.5em
			padding 0.3em 0.4em
		
	&-item
		border-right 1px solid #1B1B1B
		font-weight 500
		margin-left 2em
		width 18%
		p
			color #b0b0b0
			font-size 0.8em
			list-style none
			padding-top 1em
			position relative
			margin 0
			span
				position absolute
				right 30%
		&:nth-child(4)
			border none
	&-list
		padding 0
		color #FFF
	&-listItems
		color #6B6B6B
		font-size 0.8em
		list-style none
		padding-bottom 1em
		margin 0
		&:before
			content "Â» "
	&-listLink
		color #868686
		&:hover
			color #ADADAD
	
	
.Header
	background #ff9a07
	background linear-gradient(to bottom, #DF8600 0%, #FCE22E 100%)
	height 95vh
	padding 1em
	&-bottom
	&-slide
	&-top
		min-height 3.5em
		margin 0 auto
		position relative
		width 80 vw
		
	&-bottom
		margin-top 2em
		overflow hidden
	&-bottomBrand
		color #FFF
		display inline-block
		width 30%
	&-bottomBrandTitle 
		font-family 'Calligraffitti', cursive			
		position relative
		span
			color #222
			font-family 'Oswald', sans-serif
			display block
			font-size 1rem
			left 10%
			position absolute
			top 70%
	&-bottomMenu
		display inline-block
		overflow hidden
		position: absolute;
		top: 25%;	
		width 68%
	&-bottomMenuItem
		display inline-block
		list-style none
		margin 0
	&-bottomMenuLink
		background linear-gradient(to bottom, rgba(223, 134, 0, 0.5) 0%, rgba(252, 230, 0, 0.5) 100%)
		color #222
		display block
		font-size 1.5em
		padding 0.5em 1em
		text-decoration none
		&:hover
			background linear-gradient(to bottom, #F72C32, #F95155)
			color #FFF
	&-bottomMenuList
		margin 0
	
	&-slide
		color #111
		text-align center
	&-slideTitle
	&-slideChange
		margin 0 auto
		padding 0.5em
		width 80%
	&-slideTitle
		font-size 2.4rem
		font-weight 300
		text-transform uppercase
	&-slideChange
		span
			background #FFF
			border-radius 50%
			display inline-block
			height 20px
			width 20px
		.slideActive
			background #000
	
	&-topButton
	&-topSearch
	&-topFollow
		overflow hidden
		position absolute
	&-topButton
		left 0
	&-topSearch
		right 0
	&-topSearchForm
		text-align right
		.inputText
			border none
			border-radius 5px
			padding 0.55em 0.7em
			width 300px
	&-topFollow
		color #FFF
		font-size 1.5em
		right 1%
		top 90%
		text-transform lowercase
	
.Services
	top -5em
	&-aside
		width 30%
	&-asideItem
		list-style none
		margin 0 0 0.1em 0
	&-asideLink
		color: #222
		display block
	&-asideLink:before
		color: #222
		content "\e604"
		font-size 1.5em
	&-asideList
		margin 0
		padding 0
	&-article
		width 69%
	&-articleContent
		display inline-block
		width 60%
	&-articleItem
		display flex
		margin-bottom 2em
	&-articleFigure
		display inline-block
		width 39%

.Work
	top -7em
	p
		color #B0B0B0
		font-family sans-serif
		text-align center
	&-item
		margin-right 1.5em
		&:last-child
			margin-right 0
	&-itemFigure
		background #FFF
		border-radius 50%
		margin 0 auto
		min-height 290px
		padding 1em
		text-align center
	&-itemImage
		min-height: 121px;
		width: 130px;
		

